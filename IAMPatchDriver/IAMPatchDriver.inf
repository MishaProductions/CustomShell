;
; IAMPatchDriver.inf
;

[Version]
Signature="$WINDOWS NT$"
Class=System ; TODO: specify appropriate Class
ClassGuid={4d36e97d-e325-11ce-bfc1-08002be10318} ; TODO: specify appropriate ClassGuid
Provider=%ManufacturerName%
CatalogFile=IAMPatchDriver.cat
DriverVer= ; TODO: set DriverVer in stampinf property pages
PnpLockdown=1

[DestinationDirs]
DefaultDestDir = 12
IAMPatchDriver_Device_CoInstaller_CopyFiles = 11

[SourceDisksNames]
1 = %DiskName%,,,""

[SourceDisksFiles]
IAMPatchDriver.sys  = 1,,
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll=1 ; make sure the number matches with SourceDisksNames

;*****************************************
; Install Section
;*****************************************

[Manufacturer]
%ManufacturerName%=Standard,NT$ARCH$

[Standard.NT$ARCH$]
%IAMPatchDriver.DeviceDesc%=IAMPatchDriver_Device, Root\IAMPatchDriver ; TODO: edit hw-id

[IAMPatchDriver_Device.NT]
CopyFiles=Drivers_Dir

[Drivers_Dir]
IAMPatchDriver.sys

;-------------- Service installation
[IAMPatchDriver_Device.NT.Services]
AddService = IAMPatchDriver,%SPSVCINST_ASSOCSERVICE%, IAMPatchDriver_Service_Inst

; -------------- IAMPatchDriver driver install sections
[IAMPatchDriver_Service_Inst]
DisplayName    = %IAMPatchDriver.SVCDESC%
ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %12%\IAMPatchDriver.sys

;
;--- IAMPatchDriver_Device Coinstaller installation ------
;

[IAMPatchDriver_Device.NT.CoInstallers]
AddReg=IAMPatchDriver_Device_CoInstaller_AddReg
CopyFiles=IAMPatchDriver_Device_CoInstaller_CopyFiles

[IAMPatchDriver_Device_CoInstaller_AddReg]
HKR,,CoInstallers32,0x00010000, "WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll,WdfCoInstaller"

[IAMPatchDriver_Device_CoInstaller_CopyFiles]
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll

[IAMPatchDriver_Device.NT.Wdf]
KmdfService =  IAMPatchDriver, IAMPatchDriver_wdfsect
[IAMPatchDriver_wdfsect]
KmdfLibraryVersion = $KMDFVERSION$

[Strings]
SPSVCINST_ASSOCSERVICE= 0x00000002
ManufacturerName="<Your manufacturer name>" ;TODO: Replace with your manufacturer name
DiskName = "IAMPatchDriver Installation Disk"
IAMPatchDriver.DeviceDesc = "IAMPatchDriver Device"
IAMPatchDriver.SVCDESC = "IAMPatchDriver Service"
